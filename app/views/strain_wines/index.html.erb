<p id="notice"><%= notice %></p>

<h1>Strain Wines</h1>

<table>
  <thead>
    <tr>
      <th>Strain ID</th>
      <th>Wine ID</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strain_wines.each do |strain_wine| %>
      <tr>
        <td><%= strain_wine.strain.name %></td>
        <td><%= strain_wine.wine.name %></td>
        <td><%= strain_wine.available %></td>
        <td><%= link_to 'Show', strain_wine %></td>
        <td><%= link_to 'Edit', edit_strain_wine_path(strain_wine) %></td>
        <td><%= link_to 'Destroy', strain_wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

